<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="product_template_form_inherit_sale_description"
		model="ir.ui.view">
		<field name="name">product_template_form_inherit_sale_description</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_form_view" />
		<field name="arch" type="xml">

			<xpath expr="//notebook" position="inside">
				<page name="Descripción en Ventas" string="Descripción en Ventas">
					<sheet>
                             <field name="sale_product_description"/>
					</sheet>
				</page>
			</xpath>
			</field>
	</record>
</odoo>
